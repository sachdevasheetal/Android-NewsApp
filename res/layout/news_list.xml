<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"

    android:layout_gravity="center_horizontal"

    android:clickable="true"
    cardview:layout_constraintHorizontal_bias="0.311"
    android:foreground="?android:attr/selectableItemBackground"
    android:foregroundGravity="center_horizontal"
    cardview:cardCornerRadius="7dp"
    cardview:cardUseCompatPadding="true">"


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"

        android:foregroundGravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewNews"
            android:layout_width="120dp"
            android:layout_height="145dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"

            android:padding="0dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="285dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitleNews"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:maxLines="3"

                    android:text="Apple MacBook Air Core i5 5th Gen - (8 GB/128 GB SSD/Mac OS Sierra)"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageViewFav"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_gravity="right"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="1dp"
                    android:scaleType="fitXY"
                    android:tint="#FF0000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewShortDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewTitleNews"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="45dp"
                    android:layout_toRightOf="@id/imageViewNews"

                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="2dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginRight="5dp"
                    android:background="#6200EE"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

                <TextView
                    android:id="@+id/textViewSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewShortDesc"

                    android:layout_marginTop="45dp"
                    android:layout_toRightOf="@id/imageViewNews"
                    android:maxLines="1"
                    android:text="4.7"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>


</androidx.cardview.widget.CardView>
